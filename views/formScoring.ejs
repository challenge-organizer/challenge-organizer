<%- include('partials/header') %> 
<%- include('partials/nav') %> 
<div class="container">
  <div>
    <br>
    <h1 class="display-2">Scoring Sheet</h1>
    <br>
  </div>
  <div>
    <h3><%=user.first_name%> <%=user.last_name%></h3>
    <form action="/challenge/user/<%=user.id%>/giveScore" method="POST">
      <div class="mb-3">
        <label  class="form-label" for="Challenge">Challenges:</label><br>
        <select  class="form-select" name="ChallengeId" id="">
            <%challenge.forEach((el)=>{%>
                <option value="<%=el.id%>"><%=el.name%></option>
            <%})%>
        </select>
      </div>
        <!-- <br><br> -->
      <div class="mb-3">
        <label class="form-label"for="score">Score:</label><br>
        <input  class="form-select"type="number" name="score" id="score">
      </div>
        <br>
        <br>
        <button class="btn btn-primary" type="submit">Post</button>
    </form>
  </div>
</div>
<%- include('partials/footer') %> 